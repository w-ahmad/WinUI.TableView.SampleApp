<Page x:Class="WinUI.TableView.SampleApp.Pages.GroupingExamplePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:WinUI.TableView.SampleApp"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:tv="using:WinUI.TableView"
      xmlns:controls="using:WinUI.TableView.SampleApp.Controls"
      d:DataContext="{d:DesignInstance Type=local:ExampleViewModel}"
      mc:Ignorable="d">

    <controls:SamplePresenter Header="Basic Grouping (File Explorer Style)"
                              Description="Group data by a single property with File Explorer-style group headers. Click the chevron or anywhere on the group header to expand/collapse.">
        <controls:SamplePresenter.Example>
            <Grid Height="500">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Spacing="8" Padding="8">
                    <TextBlock Text="Group By:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="GroupByComboBox" 
                              MinWidth="150"
                              SelectedIndex="1"
                              SelectionChanged="GroupByComboBox_SelectionChanged">
                        <ComboBoxItem Content="None" Tag=""/>
                        <ComboBoxItem Content="Department" Tag="Department"/>
                        <ComboBoxItem Content="Gender" Tag="Gender"/>
                        <ComboBoxItem Content="Designation" Tag="Designation"/>
                    </ComboBox>
                    <Button Content="Expand All" Click="ExpandAll_Click" Margin="16,0,0,0"/>
                    <Button Content="Collapse All" Click="CollapseAll_Click"/>
                </StackPanel>
                
                <tv:TableView x:Name="GroupedTableView"
                              Grid.Row="1"
                              ItemsSource="{Binding Items}"
                              SelectionMode="Extended"
                              GroupExpandingCollapsing="TableView_GroupExpandingCollapsing"/>
            </Grid>
        </controls:SamplePresenter.Example>
        <controls:SamplePresenter.Xaml>
            <x:String xml:space="preserve">
&lt;tv:TableView ItemsSource="{Binding Items}">
    &lt;!-- Add GroupDescription to enable grouping -->
    &lt;tv:TableView.GroupDescriptions>
        &lt;tv:GroupDescription PropertyName="$(PropertyName)" />
    &lt;/tv:TableView.GroupDescriptions>
&lt;/tv:TableView>
            </x:String>
        </controls:SamplePresenter.Xaml>
        <controls:SamplePresenter.Substitutions>
            <controls:CodeSubstitution Key="PropertyName" Value="Department" />
        </controls:SamplePresenter.Substitutions>
    </controls:SamplePresenter>
</Page>
