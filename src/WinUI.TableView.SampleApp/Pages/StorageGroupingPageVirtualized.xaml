<Page
    x:Class="WinUI.TableView.SampleApp.Pages.StorageGroupingPageVirtualized"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tv="using:WinUI.TableView"
    xmlns:adapters="using:WinUI.TableView.SampleApp.Adapters"
    xmlns:local="using:WinUI.TableView.SampleApp.Pages"
    xmlns:conv="using:WinUI.TableView.SampleApp.Converters"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- ? CHANGE: DataTemplate now binds to ICollectionViewGroup instead of StorageFlatGroupItem -->
        <DataTemplate x:Key="GroupHeaderTemplate" x:DataType="tv:ICollectionViewGroup">
            <Grid Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                  Padding="16,12"
                  CornerRadius="4"
                  Margin="0,4">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <!-- ? CHANGE: Chevron icon based on IsExpanded (automatic!) -->
                    <FontIcon Glyph="{x:Bind IsExpanded, Mode=OneWay, Converter={StaticResource BoolToChevronConverter}}"
                              FontFamily="Segoe MDL2 Assets"
                              FontSize="14"
                              Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                    
                    <!-- ? CHANGE: Group name and item count -->
                    <TextBlock FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center">
                        <Run Text="{x:Bind Group}"/>
                        <Run Text=" (" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <Run Text="{x:Bind GroupItems.Count}" 
                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <Run Text=" items)" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </DataTemplate>

        <!-- ? ADDED: Converter for chevron icon -->
        <conv:BoolToChevronConverter x:Key="BoolToChevronConverter"/>
    </Page.Resources>

    <Grid Padding="24" RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="8">
            <TextBlock Text="Storage Grouping (Virtualized)" 
                       Style="{StaticResource TitleTextBlockStyle}"/>
            <TextBlock Text="Production-ready implementation using CollectionView grouping (preserves virtualization)" 
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>

        <!-- Controls -->
        <Grid Grid.Row="1" ColumnSpacing="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
                       Text="Folder:" 
                       VerticalAlignment="Center"
                       Margin="0,0,8,0"/>

            <ComboBox x:Name="FolderComboBox"
                      Grid.Column="1"
                      SelectedIndex="0"
                      SelectionChanged="OnFolderChanged"
                      HorizontalAlignment="Stretch">
                <ComboBoxItem Content="Downloads" Tag="Downloads"/>
                <ComboBoxItem Content="Documents" Tag="Documents"/>
                <ComboBoxItem Content="Pictures" Tag="Pictures"/>
                <ComboBoxItem Content="Videos" Tag="Videos"/>
                <ComboBoxItem Content="Music" Tag="Music"/>
            </ComboBox>

            <TextBlock Grid.Column="2" 
                       Text="Group By:" 
                       VerticalAlignment="Center"
                       Margin="16,0,8,0"/>

            <ComboBox x:Name="GroupByComboBox"
                      Grid.Column="3"
                      SelectedIndex="0"
                      SelectionChanged="OnGroupByChanged"
                      HorizontalAlignment="Stretch">
                <ComboBoxItem Content="Date Modified" Tag="DateModified"/>
                <ComboBoxItem Content="File Size" Tag="Size"/>
                <ComboBoxItem Content="File Type" Tag="FileType"/>
                <ComboBoxItem Content="Name (A-Z)" Tag="Name"/>
                <ComboBoxItem Content="No Grouping" Tag=""/>
            </ComboBox>

            <Button Grid.Column="4"
                    Content="Load Files"
                    Click="OnLoadFiles"
                    Style="{StaticResource AccentButtonStyle}"
                    HorizontalAlignment="Left"
                    Margin="16,0,0,0"/>
        </Grid>

        <!-- ? REMOVED: Expand/Collapse All buttons (automatic with CollectionView!) -->

        <!-- Loading indicator -->
        <ProgressBar Grid.Row="2" 
                     IsIndeterminate="True" 
                     Visibility="{x:Bind IsLoading, Mode=OneWay}"/>

        <!-- ? CHANGE: TableView now binds directly to _collectionView -->
        <tv:TableView x:Name="StorageTable"
                      Grid.Row="3"
                      GroupHeaderTemplate="{StaticResource GroupHeaderTemplate}"
                      Sorting="OnTableSorting"
                      ClearSorting="OnTableClearSorting"
                      SelectionMode="Extended"
                      BorderThickness="1"
                      BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                      CornerRadius="8">

            <!-- ? NO CHANGE: Columns bind to IGroupableItem properties (same as before) -->
            <tv:TableView.Columns>
                <tv:TableViewTemplateColumn Header="Name" 
                                           Tag="Name"
                                           Width="2*"
                                           CanSort="True">
                    <tv:TableViewTemplateColumn.CellTemplate>
                        <DataTemplate x:DataType="adapters:IGroupableItem">
                            <StackPanel Orientation="Horizontal" Spacing="8" Padding="8,4">
                                <FontIcon Glyph="{x:Bind FileIcon}" 
                                         FontFamily="Segoe MDL2 Assets"
                                         FontSize="16"
                                         Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                                <TextBlock Text="{x:Bind Name}" 
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </tv:TableViewTemplateColumn.CellTemplate>
                </tv:TableViewTemplateColumn>

                <tv:TableViewTextColumn Header="Type" 
                                       Tag="ItemType"
                                       Binding="{Binding ItemType}"
                                       Width="*"
                                       CanSort="True"/>

                <tv:TableViewTextColumn Header="Size" 
                                       Tag="Size"
                                       Binding="{Binding SizeDisplay}"
                                       Width="*"
                                       CanSort="True"/>

                <tv:TableViewTextColumn Header="Date Modified" 
                                       Tag="DateModified"
                                       Binding="{Binding DateModifiedDisplay}"
                                       Width="1.5*"
                                       CanSort="True"/>

                <tv:TableViewTextColumn Header="Extension" 
                                       Tag="FileType"
                                       Binding="{Binding FileType}"
                                       Width="*"
                                       CanSort="True"/>
            </tv:TableView.Columns>
        </tv:TableView>

        <!-- Status bar -->
        <Grid Grid.Row="4" 
              Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
              Padding="12,8"
              CornerRadius="4"
              BorderThickness="1"
              BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
                       Text="{x:Bind StatusMessage, Mode=OneWay}"
                       VerticalAlignment="Center"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

            <TextBlock Grid.Column="1" 
                       Text="{x:Bind ItemCountText, Mode=OneWay}"
                       VerticalAlignment="Center"
                       FontWeight="SemiBold"/>
        </Grid>
    </Grid>
</Page>
